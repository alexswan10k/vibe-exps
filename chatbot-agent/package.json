{
  "name": "chatbot-agent",
  "version": "1.0.0",
  "description": "Web app chatbot agent with LMStudio integration, image upload, and tool calling",
  "main": "dist/server.js",
  "scripts": {
    "build-frontend": "tsc public/script.ts --outDir public --target ES2020 --module ES2020 --skipLibCheck",
    "build": "npm run build-frontend && tsc",
    "start": "npm run build && node dist/server.js",
    "dev": "concurrently \"tsc --watch public/script.ts --outDir public --target ES2020 --module ES2020 --skipLibCheck\" \"nodemon --exec ts-node server.ts\""
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.0.0",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  }
}
